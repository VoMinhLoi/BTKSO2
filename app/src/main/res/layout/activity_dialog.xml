<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/operationTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_toRightOf="@+id/operationTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="dữ liệu"
            android:textSize="18dp"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">
        <EditText
            android:id="@+id/tenKHSVET"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Nhập ten khoa hoc"/>
        <EditText
            android:id="@+id/tenThuongET"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Nhập tên thuong"/>
        <EditText
            android:id="@+id/duocTinhET"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Nhập duoc tinh"/>
        <EditText
            android:id="@+id/chuYET"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Nhập chu y"/>
        <EditText
            android:id="@+id/dacTinhET"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Nhập dac tinh"/>
        <EditText
            android:id="@+id/congdungET"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Nhập cong dung"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:id="@+id/okBT"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Ok"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/cancelBT"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Cancel"
            android:layout_margin="5dp"/>
    </LinearLayout>
</LinearLayout>